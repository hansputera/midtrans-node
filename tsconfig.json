{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./dist",
        "target": "ES6",
        "module": "CommonJS",
        "skipDefaultLibCheck": true,
        "strict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    },
    "exclude": ["node_modules", "docs"],
    "include": ["src/**/*"]
} 
